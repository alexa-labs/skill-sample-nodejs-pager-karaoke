{
    "type": "APL",
    "version": "1.0",
    "import": [
        {
            "name": "alexa-viewport-profiles",
            "version": "1.0.0"
        },
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        },
        {
            "name": "alexa-styles",
            "version": "1.0.0"
        }
    ],
    "layouts": {
        "BackgroundImage": {
            "parameters": [],
            "items": [
                {
                    "type": "Image",
                    "source": "https://d2o906d8ln7ui1.cloudfront.net/images/BT6_Background.png",
                    "position": "absolute",
                    "width": "100vw",
                    "height": "100vh",
                    "scale": "best-fill"
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "when": "${@viewportProfile == @tvLandscapeXLarge}",
                "type": "Container",
                "direction": "column",
                "height": "100vh",
                "justifyContent": "spaceBetween",
                "items": [
                    {
                        "type": "BackgroundImage"
                    },
                    {
                        "type": "Text",
                        "text": "<br>What type of device is this?",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeSmall",
                        "textAlign": "center",
                        "fontWeight": "100",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "Text",
                        "text": "XLarge landscape TV",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize":"@fontSizeXXLarge",
                        "textAlign": "center",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "AlexaFooter",
                        "hintText": "${payload.deviceTemplateData.properties.hintString}"
                    }
                ]
            },
            {
                "when": "${@viewportProfile == @hubRoundSmall}",
                "type": "Container",
                "direction": "column",
                "height": "100vh",
                "justifyContent": "spaceBetween",
                "items": [
                    {
                        "type": "BackgroundImage"
                    },
                    {
                        "type": "Text",
                        "text": "<br><br><br>What type of device is this?",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeXSmall",
                        "textAlign": "center",
                        "fontWeight": "100",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "Text",
                        "text": "Small round hub",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeLarge",
                        "textAlign": "center",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "AlexaFooter",
                        "hintText": "${payload.deviceTemplateData.properties.hintString}"
                    }
                ]
            },
            {
                "when": "${@viewportProfile == @hubLandscapeMedium}",
                "type": "Container",
                "direction": "column",
                "height": "100vh",
                "justifyContent": "spaceBetween",
                "items": [
                    {
                        "type": "BackgroundImage"
                    },
                    {
                        "type": "Text",
                        "text": "<br>What type of device is this?",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeXSmall",
                        "textAlign": "center",
                        "fontWeight": "100",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "Text",
                        "text": "Medium landscape hub",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeLarge",
                        "textAlign": "center",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "AlexaFooter",
                        "hintText": "${payload.deviceTemplateData.properties.hintString}"
                    }
                ]
            },
            {
                "type": "Container",
                "direction": "column",
                "height": "100vh",
                "justifyContent": "spaceBetween",
                "items": [
                    {
                        "type": "BackgroundImage"
                    },
                    {
                        "type": "Text",
                        "text": "<br>What type of device is this?",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeXSmall",
                        "textAlign": "center",
                        "fontWeight": "100",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "Text",
                        "text": "This is a ${payload.deviceTemplateData.properties.deviceName}",
                        "color": "#ffffff",
                        "width": "100%",
                        "fontSize": "@fontSizeLarge",
                        "textAlign": "center",
                        "paddingLeft": 10,
                        "paddingRight": 10
                    },
                    {
                        "type": "AlexaFooter",
                        "hintText": "${payload.deviceTemplateData.properties.hintString}"
                    }
                ]
            }
        ]
    }
}